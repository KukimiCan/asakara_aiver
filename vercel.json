{
  "version": 2,
  "functions": {
    "api/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    // index.htmlをルートにルーティング
    { "src": "/", "dest": "/index.html" },
    // publicディレクトリ内のファイルを /public/ でアクセス可能にする
    { "src": "/public/(.*)", "dest": "/public/$1" },
    // APIルート
    { "src": "/api/(.*)", "dest": "/api/$1.js" }
  ]
}
